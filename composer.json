{
  "name": "wearesho-team/yii2-google-autocomplete",
  "description": "Yii2 google-api integration",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">7.1",
    "wearesho-team/google-autocomplete": "^2.1",
    "yiisoft/yii2": "^2.0.15",
    "wearesho-team/yii-http": "^1.12"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.3",
    "squizlabs/php_codesniffer": "^3.3",
    "brainmaestro/composer-git-hooks": "^2.6"
  },
  "authors": [
    {
      "name": "Roman Varkuta",
      "email": "roman.varkuta@gmail.com"
    },
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Wearesho\\GoogleAutocomplete\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\GoogleAutocomplete\\Yii\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  }
}
